generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  name          String?
  email         String?          @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role             @default(USER)
  score         Int              @default(0)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  currentStreak    Int      @default(0)
  longestStreak    Int      @default(0)
  lastActivityDate DateTime?
  attempts      UserAttempt[]
  views         View[]
  accounts      Account[]
  sessions      Session[]
  submissions   Submission[]
  likes         Like[]
  comments      Comment[]
  dailyActivities  DailyActivity[]
  preferences   UserPreferences?
}

model DailyActivity{
  id            String   @id @default(cuid())
  userId        String
  date          DateTime 
  totalAttempts Int      @default(0)
  totalCorrect  Int      @default(0)
  totalSkips    Int      @default(0)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
  @@index([userId])
  @@index([date])
  
}

model UserPreferences {
  id                    String       @id @default(cuid())
  userId                String       @map("user_id")
  preferredDifficulties Difficulty[] @default([]) // e.g., [Easy, Medium]
  // explicitly mentiond by the usere 
  preferredTopics       String[]     @default([]) // e.g., ["array", "dynamic-programming"]
  // auto generated every time user solves a question
  interestedTopics      String[]     @default([]) // e.g., ["array", "dynamic-programming"]
  feedSize              Int          @default(10) // questions per scroll load
  preferredLanguages    String[]     @default([]) // e.g., ["javascript", "python"]
  user                  User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Question {
  id            String       @id @default(cuid())
  title         String
  description   String
  options       Json
  correctOption Int
  explanation   String?
  difficulty    Difficulty
  category      String
  tags          String[]
  codeSnippet   String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  views         View[]
  submissions   Submission[]
  likes         Like[]
  comments      Comment[]

  @@index([tags])
  @@index([difficulty])
}

model Submission {
  id              String        @id @default(cuid())
  userId          String
  questionId      String
  attempts        Int           @default(0)
  correctAttempts Int           @default(0)
  noOfSkips       Int           @default(0)
  lastCorrect     Boolean?
  lastShownAt     DateTime      @default(now()) @map("last_shown_at")
  submittedAt     DateTime?
  attemptsHistory UserAttempt[]
  isCorrect       Boolean
  user            User          @relation(fields: [userId], references: [id])
  question        Question      @relation(fields: [questionId], references: [id])
  createdAt       DateTime      @default(now())
  @@unique([userId, questionId])
  @@index([userId, questionId])
  @@index([lastShownAt])
}

model UserAttempt {
  id             String   @id @default(cuid())
  userId         String
  questionId     String
  selectedOption String // e.g., "B" or full answer text, or option index
  isCorrect      Boolean
  attemptedAt    DateTime @default(now())

  submission Submission @relation(fields: [userId, questionId], references: [userId, questionId], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id])

  
}

model Like {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([userId, questionId])
  @@index([userId, questionId])
}

// Depricate in next version
model View {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())
  @@index([questionId])
}

model Comment {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  content    String
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())
  @@index([questionId])
}

enum Role {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
