generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role         @default(USER)
  score         Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  views         View[]
  accounts      Account[]
  sessions      Session[]
  submissions   Submission[]
  likes         Like[]
  comments      Comment[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Question {
  id            String       @id @default(cuid())
  title         String
  description   String
  options       Json
  correctOption Int
  explanation   String?
  difficulty    Difficulty
  category      String
  tags          String[]
  codeSnippet   String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  views         View[]
  submissions   Submission[]
  likes         Like[]
  comments      Comment[]
}

model Submission {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  isCorrect  Boolean
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())
}

model Like {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([userId, questionId])
}

model View {
  id         String   @id @default(cuid()) 
  userId     String
  questionId String
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())
}

model Comment {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  content    String
  user       User     @relation(fields: [userId], references: [id])
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
